<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:foreground="@drawable/card_selector"
    android:stateListAnimator="@animator/focus_zoom"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:focusable="false">

        <!-- 文件图标 -->
        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="文件图标"
            android:scaleType="centerCrop"
            android:focusable="false" />

        <!-- 文件信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:focusable="false">

            <!-- 文件名 -->
            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="文件名.jpg"
                android:focusable="false" />

            <!-- 文件大小/修改时间 -->
            <TextView
                android:id="@+id/tv_file_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:text="1.5 MB · 2024-01-01"
                android:focusable="false" />

        </LinearLayout>

        <!-- 选中指示器 -->
        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            android:src="@android:drawable/checkbox_on_background"
            android:contentDescription="已选中"
            android:focusable="false" />

    </LinearLayout>

</androidx.cardview.widget.CardView>